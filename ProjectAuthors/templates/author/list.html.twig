<style>
    .author-image {
        width: 100px; /* Adjust the width as needed */
        height: 100px; /* Adjust the height as needed */
    }

    .author-table {
        border-collapse: collapse;
        width: 100%;
    }

    .author-table, .author-table th, .author-table td {
        border: 1px solid #000;
        text-align: center;
    }

    .author-table th, .author-table td {
        padding: 10px;
    }
</style>

{% include 'reusable/headertab.html.twig' %}

<br>
<br>
<br>

{% if authors is not defined or authors is empty %}
    <h3>Aucun livre repertori√©</h3>
{% else %}
    <table class="author-table">
        <tr>
            <td>Name</td>
            <td>Country</td>
            <td>Age</td>
            <td>Portrait</td>
            <td>Action</td>
        </tr>
        {% for unit in authors %}
            <tr>
                <td><a href="{{path('author-details', {'name':unit.name}) }}">{{ unit.name|upper }}</a></td>
                <td>{{ unit.country }}</td>
                <td>{{ unit.age }}</td>
                <td><img class="author-image" src="{{ asset('images/' ~ unit.image) }}" alt="Author Portrait" /></td>
                <td><a href="{{ path('edit-author',{'id':unit.id}) }}"><strong>Edit</strong></a>&nbsp;&nbsp;<a href="{{ path('delete-author', {'id':unit.id}) }}"><strong>Delete</strong></a></td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
